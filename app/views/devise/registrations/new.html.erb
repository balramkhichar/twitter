<div class="background">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-sm-12 col-xs-12 pull-right login-box">
        <h2>Join for free</h2>
        <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.email_field :email, autofocus: true,icon: "envelope" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", icon: "lock" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", icon: "lock" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-success btn-block" %>
          </div>
        <% end %>
        <br>
        Already a member? <%= render "devise/shared/links" %>
        <br>
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
      </div>
    </div>
    </div>
</div>